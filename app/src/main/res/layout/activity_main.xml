<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbarSize="20sp"
    android:scrollbarThumbVertical="@null"
    tools:ignore="SpeakableTextPresentCheck"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <!-- 플로팅 홈 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="650dp"
        android:src="@drawable/float_home"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

    <!-- 플로팅 마이미션 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/float_mission"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="330dp"
        app:backgroundTint="#ffffff"
        app:elevation="5dp"
        android:tooltipText="마이미션"
        app:pressedTranslationZ="12dp" />

    <!-- 플로팅 전국뱃지지도 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/float_badge"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="330dp"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        android:tooltipText="전국뱃지지도"
        app:pressedTranslationZ="12dp" />

    <!-- 플로팅 내정보수정 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="650dp"
        android:src="@drawable/float_my"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        android:tooltipText="내정보수정"
        app:pressedTranslationZ="12dp" />

    <!-- 플로팅 미션지도 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="330dp"
        android:src="@drawable/float_map"
        app:backgroundTint="#ffffff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

    <!-- 플로팅 열었을 때 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_plus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/float_plus2"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="330dp"
        app:backgroundTint="#ff6d64"
        app:pressedTranslationZ="12dp" />

    <!-- 플로팅 기본 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="650dp"
        android:src="@drawable/float_plus"
        app:backgroundTint="#ff6d64"
        app:pressedTranslationZ="12dp" />



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/img_mainProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/main_user" />

        <TextView
            android:id="@+id/tv_mainNick"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/dream5"
            android:text="로그인을 해주세요!"
            app:layout_constraintBottom_toBottomOf="@+id/img_mainProfile"
            app:layout_constraintStart_toEndOf="@+id/img_mainProfile"
            app:layout_constraintTop_toTopOf="@+id/img_mainProfile" />

        <Button
            android:id="@+id/btn_mainLogin"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/button_color"
            android:fontFamily="@font/dream6"
            android:text="로그인"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_mainNick"
            app:layout_constraintTop_toTopOf="@+id/tv_mainNick" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mainNick"
            app:srcCompat="@drawable/main_int" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mainLocation"
            app:srcCompat="@drawable/main_ad" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/dream4"
            android:text="현재 위치는"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_mainLocation"
            app:layout_constraintStart_toStartOf="@+id/tv_mainLocation"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/tv_mainLocation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/round_login"
            android:fontFamily="@font/dream5"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="광주광역시"
            app:layout_constraintBottom_toTopOf="@+id/imageView22"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/dream8"
            android:text="뱃지 획득 순위"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView22" />

        <Button
            android:id="@+id/btn_mainBadgeList"
            android:layout_width="62dp"
            android:layout_height="26dp"
            android:background="@drawable/button_empty_color"
            android:fontFamily="@font/dream2"
            android:text="+전체보기"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/imageView22"
            app:layout_constraintTop_toTopOf="@+id/textView13" />

        <ImageView
            android:id="@+id/img_mainLocationRe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_mainLocation"
            app:layout_constraintEnd_toEndOf="@+id/tv_mainLocation"
            app:layout_constraintTop_toTopOf="@+id/tv_mainLocation"
            app:srcCompat="@drawable/main_refresh" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2"
            tools:layout_editor_absoluteX="-16dp">

            <Button
                android:id="@+id/btn_mainMissonStart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/gradation_color"
                android:fontFamily="@font/dream7"
                android:text="START!"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            tools:layout_editor_absoluteY="605dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_mainRank">

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/dream8"
                android:text="추천 테마 여행"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="384dp"
            android:layout_height="270dp"
            android:scrollbarThumbHorizontal="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView40"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView41"
                    app:layout_constraintStart_toEndOf="@+id/imageView41"
                    app:layout_constraintTop_toTopOf="@+id/imageView41"
                    app:srcCompat="@drawable/theme_sun" />

                <ImageView
                    android:id="@+id/imageView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:padding="10dp"
                    android:paddingStart="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/theme_winter" />

                <ImageView
                    android:id="@+id/imageView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView40"
                    app:layout_constraintStart_toEndOf="@+id/imageView40"
                    app:layout_constraintTop_toTopOf="@+id/imageView40"
                    app:srcCompat="@drawable/theme_temple" />

                <ImageView
                    android:id="@+id/imageView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView42"
                    app:layout_constraintStart_toEndOf="@+id/imageView42"
                    app:layout_constraintTop_toTopOf="@+id/imageView42"
                    app:srcCompat="@drawable/theme_mount" />

                <ImageView
                    android:id="@+id/imageView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView43"
                    app:layout_constraintStart_toEndOf="@+id/imageView43"
                    app:layout_constraintTop_toTopOf="@+id/imageView43"
                    app:srcCompat="@drawable/theme_sea" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/dream4"
                    android:lineSpacingExtra="7sp"
                    android:text="하얀 눈 쌓인\n그곳에서 인증샷\n남겨보기"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/imageView41"
                    app:layout_constraintTop_toTopOf="@+id/imageView41" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/dream4"
                    android:lineSpacingExtra="7sp"
                    android:text="새해 해돋이보며\n함께 소원 빌어요"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/imageView40"
                    app:layout_constraintTop_toTopOf="@+id/imageView40" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/dream4"
                    android:lineSpacingExtra="7sp"
                    android:text="차분하게\n2022년 맞이하기"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/imageView40"
                    app:layout_constraintStart_toStartOf="@+id/imageView42"
                    app:layout_constraintTop_toTopOf="@+id/imageView42" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/dream4"
                    android:lineSpacingExtra="7sp"
                    android:text="팰롱팰롱 눈부신\n바다를 보면\n가슴이 돌랑돌랑"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/imageView43"
                    app:layout_constraintTop_toTopOf="@+id/imageView44" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/dream4"
                    android:lineSpacingExtra="7sp"
                    android:text="자~ 떠나자\n전남 산으로오~"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/imageView42"
                    app:layout_constraintTop_toTopOf="@+id/imageView43" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mainRank"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

    <ImageView
        android:id="@+id/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@drawable/transparent" />

</RelativeLayout>