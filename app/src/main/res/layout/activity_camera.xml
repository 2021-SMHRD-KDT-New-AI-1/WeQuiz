<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5FBE9"
    tools:context=".CameraActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera_back"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btn_album"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/button_color"
        android:elevation="0dp"
        android:fontFamily="@font/dream5"
        android:text="가져오기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="14dp"
        app:layout_constraintStart_toStartOf="@+id/img_select"
        app:layout_constraintTop_toBottomOf="@+id/img_select" />

    <Button
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_color"
        android:elevation="0dp"
        android:fontFamily="@font/dream5"
        android:text="제출하기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_album"
        app:layout_constraintEnd_toEndOf="@+id/img_select"
        app:layout_constraintTop_toTopOf="@+id/btn_album" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera_img" />
</androidx.constraintlayout.widget.ConstraintLayout>